import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        long num=s.nextLong();
        int count=0;
        if(1<=num && num<=10000000){
            while(num!=0){
                num=num/10;
                count++;
            }
            System.out.printf("The count of the given integer is: "+count);
        }
        else{
            System.out.println("Enter a Valid Input");
        }
    }
}
